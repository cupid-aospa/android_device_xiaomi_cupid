# Audio
vendor.audio.hdr.record.enable=true

# Bluetooth
bluetooth.device.default_name=Xiaomi 12
persist.vendor.qcom.bluetooth.a2dp_offload_cap=sbc-aptx-aptxhd-aac-ldac-aptxadaptiver2
persist.vendor.qcom.bluetooth.aptxadaptiver2_2_support=true

# Display
persist.sys.sf.color_mode=0
ro.surface_flinger.set_idle_timer_ms=1000

# IWLAN
persist.vendor.data.iwlan.enable=true

# SPU
vendor.gatekeeper.disable_spu=true

# USB
vendor.usb.product_string=Xiaomi 12
